                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="37"/>
                </Grid.RowDefinitions>
                <Label Content="Name :" Grid.Column="0" Style="{StaticResource Label}" Margin="3,0,0,0" Height="29" Width="57" />
