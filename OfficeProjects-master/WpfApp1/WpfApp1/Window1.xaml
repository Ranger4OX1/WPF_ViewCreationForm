                <Label Content="Data Type:" Grid.Column="2" Style="{StaticResource Label}" />
                <TextBox x:Name="dv_dataTypeTextBox" Style="{StaticResource TextBox}" Grid.Column="2"                 
                    Text="{Binding s3, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />

                <Label Content="Combo Box:" Grid.Column="0" Grid.Row="2" Style="{StaticResource Label}" />
                <TextBox x:Name="dv_comboBoxTextBox" Style="{StaticResource TextBox}" Grid.Column="0" Grid.Row="2"                 
                    Text="{Binding s4, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />

                <Label Content="Dep Case:" Grid.Column="1" Grid.Row="2" Style="{StaticResource Label}" />
                <TextBox x:Name="dv_depCaseTextBox" Style="{StaticResource TextBox}" Grid.Column="1" Grid.Row="2"                 
                    Text="{Binding s6, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />

                <Label Content="Normalisation:" Grid.Column="2" Grid.Row="2" Style="{StaticResource Label}" />
                <TextBox x:Name="dv_normalisationTextBox" Style="{StaticResource TextBox}" Grid.Column="2" Grid.Row="2"              
