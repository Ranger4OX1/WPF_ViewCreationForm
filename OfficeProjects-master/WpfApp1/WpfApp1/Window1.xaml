                <Label Content="Right:" Grid.Column="0" Grid.Row="3" Style="{StaticResource Label}" />
                <TextBox x:Name="dv_whrRightTextBox" Style="{StaticResource TextBox}" Grid.Column="0" Grid.Row="3"                 
