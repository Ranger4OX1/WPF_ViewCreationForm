                <TextBox x:Name="tab_s32TextBox" Style="{StaticResource TextBox}" Grid.Column="2" HorizontalAlignment="Left" Margin="73,0,0,0" Height="23" Width="150" Grid.ColumnSpan="2" />

                <Button x:Name="tab_saveBtn" Content="Save" Grid.Column="5" Style="{StaticResource cmdButton}"   Margin="57,4,23,8" Click="tab_saveBtn_Click" />



            </Grid>

            <DataGrid x:Name="DVgrid"  Grid.Row="5" Height="190" SelectionUnit="FullRow" SelectionMode="Single" IsSynchronizedWithCurrentItem="True"  Margin="5,5,1,0" Visibility="Visible" ItemsSource="{Binding Source={StaticResource screenDVViewSource}}" VerticalAlignment="Top" IsEnabled="False" />
        </Grid>
        <Grid x:Name="screenSelectionGrid" Grid.Row="1" Height="auto" Visibility="Collapsed" Margin="0,0,0,0" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="190"/>
                <RowDefinition Height="250" />
            </Grid.RowDefinitions>

            <Grid x:Name="sel_screenDetailGrid" Grid.Row="0" HorizontalAlignment="Center" Visibility="Visible" VerticalAlignment="Center" Background="WhiteSmoke" DataContext="{StaticResource modtreeViewSource}" Width="1126" Height="auto" Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="300"/>
                    <ColumnDefinition Width="*" MinWidth="360"/>
                    <ColumnDefinition Width="*" MinWidth="250"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Screen Code:" Grid.Row="0" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_screenCodeTextBox" Grid.Row="0" Style="{StaticResource TextBox}"
                  Text="{Binding s1, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" />


                <Label Content="Screen Name:" Grid.Row="1" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_screenNameTextBox" Grid.Row="1" Style="{StaticResource TextBox}"
                  Text="{Binding s2, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>

                <Label Content="Table Name:" Grid.Column="1" Grid.Row="4" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_tableNameTextBox" Grid.Column="1" Grid.Row="4" Style="{StaticResource TextBox}"
                  Text="{Binding s32, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>


                <Label Content="Product Code:" Grid.Row="2" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_productCodeTextBox" Grid.Row="2" Style="{StaticResource TextBox}"                  
                     Text="{Binding s105, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>

                <Label Content="ID :" Grid.Row="3" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_idTextBox" Style="{StaticResource TextBox}" Grid.Row="3"                  
                     Text="{Binding n100, Mode=TwoWay,  NotifyOnValidationError=true, ValidatesOnExceptions=true}" />


                <Label Content="Level of Tree:" Grid.Row="4" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_treeLvlTextBox" Grid.Row="4" Style="{StaticResource TextBox}"
                  Text="{Binding s39, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />

                <Label Content="Previous Level Code:" Grid.Column="1" Grid.Row="1" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_prevLvlTextBox" Grid.Column="1" Grid.Row="1" Style="{StaticResource TextBox}"
                  Text="{Binding s40, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>

                <Label Content="Display Order:" Grid.Column="1" Grid.Row="2" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_displayOrderTextBox" Grid.Column="1" Grid.Row="2" Style="{StaticResource TextBox}"
                  Text="{Binding n1, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  />

                <Label Content="URL:" Grid.Column="1" Grid.Row="3" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_URLTextBox" Grid.Column="1" Grid.Row="3" Style="{StaticResource TextBox}"              
                     Text="{Binding s4, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />

                <Label Content="Status:" Grid.Column="2" Style="{StaticResource Label}" />
                <TextBox x:Name="selScr_statusTextBox"  Grid.Column="2" Style="{StaticResource TextBox}" Text="{Binding s101, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />


                <Label Content="Parent:" Grid.Column="2" Grid.Row="1" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_parentTextBox"  Grid.Column="2" Grid.Row="1" Style="{StaticResource TextBox}" Text="{Binding s3, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>


                <Label Content="Doc Type:" Grid.Column="2" Grid.Row="2" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_docTypeTextBox" Grid.Column="2" Grid.Row="2" Style="{StaticResource TextBox}"
                  Text="{Binding s102, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>

                <Label Content="View Type:" Grid.Column="1" Grid.Row="0" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_viewTypeTextBox"  Grid.Column="1" Grid.Row="0" Style="{StaticResource TextBox}" Text="{Binding s5, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                <Label Content="Child Type:" Grid.Column="2" Grid.Row="3" Style="{StaticResource Label}"/>
                <TextBox x:Name="selScr_childTypeTextBox"  Grid.Column="2" Grid.Row="3" Style="{StaticResource TextBox}" Text="{Binding s100, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>


                <Button Grid.Column="2"  Grid.Row="4" Content="Select Screen" Click="sel_ScreenButton_Click" FontFamily="Bahnschrift SemiBold" Style="{StaticResource cmdButton}">
                    <!--correct this name when fixing UI to sec_selectButton_Click-->
                    <Button.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuColorKey}}"/>
                    </Button.Background>
                </Button>


            </Grid>

            <DataGrid x:Name="modtreeDataGrid"  Grid.Row="1" Width="1121" Height="250" SelectionUnit="FullRow" SelectionMode="Single" IsSynchronizedWithCurrentItem="True"  Margin="8,5,8,0" Visibility="Visible" ItemsSource="{Binding Source={StaticResource modtreeViewSource}}" VerticalAlignment="Top"/>

        </Grid>
    </Grid>



