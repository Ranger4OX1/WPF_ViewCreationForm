                <Label Content="Rigix:" Grid.Column="1" Grid.Row="3" Style="{StaticResource Label}" />
                <TextBox x:Name="dv_rigixTextBox" Style="{StaticResource TextBox}" Grid.Column="1" Grid.Row="3"                 
