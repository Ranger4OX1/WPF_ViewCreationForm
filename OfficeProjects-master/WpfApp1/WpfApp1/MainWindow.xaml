            <TextBox x:Name="create_statusTextBox"  Grid.Column="2" Grid.Row="4" Style="{StaticResource TextBox}" Text="{Binding s101, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>


            <Label Content="Parent:" Grid.Column="2" Grid.Row="1" Style="{StaticResource Label}"/>
            <TextBox x:Name="create_parentTextBox"  Grid.Column="2" Grid.Row="1" Style="{StaticResource TextBox}" Text="{Binding s3, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>


            <Label Content="Doc Type:" Grid.Column="2" Grid.Row="2" Style="{StaticResource Label}"/>
            <TextBox x:Name="create_docTypeTextBox" Grid.Column="2" Grid.Row="2" Style="{StaticResource TextBox}"
                  Text="{Binding s102, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>


            <Label Content="Child Type:" Grid.Column="2" Grid.Row="3" Style="{StaticResource Label}"/>
            <TextBox x:Name="create_childTypeTextBox"  Grid.Column="2" Grid.Row="3" Style="{StaticResource TextBox}" Text="{Binding s100, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>

        </Grid>
        <Grid x:Name="existingModtreeGrid" Grid.Row="1" HorizontalAlignment="Stretch" Margin="5,10,0,0" Visibility="Collapsed" VerticalAlignment="Stretch" Background="AntiqueWhite" DataContext="{StaticResource modtreeViewSource}" Cursor="Hand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="230"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="*" MinWidth="230"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Module Code:" Grid.Row="1" Style="{StaticResource Label}"/>
            <TextBox x:Name="moduleCodeTextBox" Grid.Row="1" Style="{StaticResource TextBox}"
                  Text="{Binding s1, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" HorizontalAlignment="Right" />

            <Label Content="Module Name:" Grid.Row="2" Style="{StaticResource Label}" Margin="0,1,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="moduleNameTextBox" Grid.Row="2" Style="{StaticResource TextBox}"
                  Text="{Binding s2, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" HorizontalAlignment="Right"/>

            <Label Content="Product Code:" Grid.Row="3" Style="{StaticResource Label}" Margin="0,1,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="productCodeTextBox" Grid.Row="3" Style="{StaticResource TextBox}"
                  Text="{Binding s105, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" HorizontalAlignment="Right"/>

            <Label Content="ID :" Style="{StaticResource Label}" Margin="0,2,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="idTextBox" Style="{StaticResource TextBox}"
                  Text="{Binding n100, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" IsEnabled="False" HorizontalAlignment="Right"/>

            <Label Content="Level of Tree:" Grid.Column="1" Grid.Row="1" Style="{StaticResource Label}"/>
            <TextBox x:Name="treeLvlTextBox" Grid.Column="1" Grid.Row="1" Style="{StaticResource TextBox}"
                  Text="{Binding s39, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Right" />

            <Label Content="Previous Level Code:" Grid.Column="1" Grid.Row="2" Style="{StaticResource Label}"/>
            <TextBox x:Name="prevLvlTextBox" Grid.Column="1" Grid.Row="2" Style="{StaticResource TextBox}"
                  Text="{Binding s40, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Right"/>

            <Label Content="Display Order:" Grid.Column="1" Grid.Row="3" Style="{StaticResource Label}"/>
            <TextBox x:Name="displayOrderTextBox" Grid.Column="1" Grid.Row="3" Style="{StaticResource TextBox}"
                  Text="{Binding n1, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Right"/>

            <Label Content="Module Image:" Grid.Column="1" Grid.Row="0" Style="{StaticResource Label}"/>
            <TextBox x:Name="moduleImgTextBox" Grid.Column="1" Grid.Row="0" Style="{StaticResource TextBox}"
                  Text="{Binding s8, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Right"/>

            <Label Content="Status:" Grid.Column="2" Grid.Row="0" Style="{StaticResource Label}"/>
            <ComboBox x:Name="statusComboBox" Grid.Column="2" Grid.Row="0" Style="{StaticResource ComboBox}" Text="{Binding s101}" HorizontalAlignment="Right" >
                <ComboBoxItem Content="A"/>
                <ComboBoxItem Content="I"/>
                <ComboBoxItem Content="S"/>
            </ComboBox>

            <Label Content="Parent:" Grid.Column="2" Grid.Row="1" Style="{StaticResource Label}"/>
            <ComboBox x:Name="parentComboBox" Grid.Column="2" Grid.Row="1" Style="{StaticResource ComboBox}" Text="{Binding s3}" HorizontalAlignment="Right" >
                <ComboBoxItem Content="0"/>
                <ComboBoxItem Content="1"/>
            </ComboBox>

            <Label Content="Doc Type:" Grid.Column="2" Grid.Row="2" Style="{StaticResource Label}"/>
            <TextBox x:Name="docTypeTextBox" Grid.Column="2" Grid.Row="2" Style="{StaticResource TextBox}"
                  Text="{Binding s102, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  HorizontalAlignment="Right" Width="150"/>

            <Label Content="Child Type:" Grid.Column="2" Grid.Row="3" Style="{StaticResource Label}"/>
            <ComboBox x:Name="childTypeComboBox" Grid.Column="2" Grid.Row="3" Style="{StaticResource ComboBox}" Text="{Binding s100}" HorizontalAlignment="Right" >
                <ComboBoxItem Content="SCR"/>
                <ComboBoxItem Content="STS"/>
                <ComboBoxItem Content="TAB"/>
                <ComboBoxItem Content="MSS"/>
                <ComboBoxItem Content="DWC_R"/>
                <ComboBoxItem Content="DWC"/>
                <ComboBoxItem Content="BTNCOMBO"/>
                <ComboBoxItem Content="PMT_R"/>
                <ComboBoxItem Content="RPT"/>
                <ComboBoxItem Content="CFB"/>
                <ComboBoxItem Content="CFS"/>
                <ComboBoxItem Content="CTAB"/>
                <ComboBoxItem Content="DIS"/>
                <ComboBoxItem Content="SEC"/>
                <ComboBoxItem Content="DSC"/>
                <ComboBoxItem Content="TCH"/>
                <ComboBoxItem Content="SCE"/>
                <ComboBoxItem Content="BTN"/>
                <ComboBoxItem Content="SIGN"/>
                <ComboBoxItem Content="WGT"/>
                <ComboBoxItem Content="COR"/>
                <ComboBoxItem Content="ERP"/>
                <ComboBoxItem Content="MOD"/>
                <ComboBoxItem Content="ATCH"/>
                <ComboBoxItem Content="PMT"/>
                <ComboBoxItem Content="TABD"/>
            </ComboBox>
            <Button Grid.Column="2" Grid.Row="4" Content="Add Module" HorizontalAlignment="Center" Style="{StaticResource cmdButton}" VerticalAlignment="Center" Click="addModuleButton_Click" Width="147" Margin="10,10,10,10">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuColorKey}}"/>
                </Button.Background>
            </Button>
        </Grid>


        <DataGrid x:Name="modtreeDataGrid" HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Stretch" SelectionUnit="FullRow" SelectionMode="Single" IsSynchronizedWithCurrentItem="True"  Margin="0,10,0,0" Visibility="Collapsed" ItemsSource="{Binding Source={StaticResource modtreeViewSource}}"/>

        <DataGrid x:Name="moduleDataGrid" HorizontalAlignment="Stretch" Grid.Row="1" SelectionUnit="FullRow" SelectionMode="Single" IsSynchronizedWithCurrentItem="True"  Margin="5,129,0,244" Visibility="Collapsed" ItemsSource="{Binding Source={StaticResource moduleViewSource}}" Grid.RowSpan="2" />

        <DataGrid x:Name="secLvl2DataGrid" HorizontalAlignment="Stretch" Grid.Row="2" SelectionUnit="FullRow" SelectionMode="Single" IsSynchronizedWithCurrentItem="True" Margin="0,126,0,191" Visibility="Collapsed"  ItemsSource="{Binding Source={StaticResource secLvl2ViewSource}}" />

        <Button x:Name="addScreenButton"  Content="Add Screen" HorizontalAlignment="Right" Style="{StaticResource cmdButton}" VerticalAlignment="Top" Click="addScreenButton_Click" Height="35" Width="182" Margin="0,258,10,0" Grid.Row="2" Visibility="Collapsed" >
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuColorKey}}"/>
            </Button.Background>
        </Button>



